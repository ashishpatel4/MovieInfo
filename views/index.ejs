<%if(!movie_week["results"]){%>
    <div class="text-center">
        <h1>FILE NOT FOUND</h1>
    </div>
<%}else{%>
    <h2 class="mt-1 mb-2">Trending Movies By Week</h2>
    <div class="text-center ml-5 mr-1" style="display:flex; overflow-x: auto;">
        <% movie_week["results"].forEach(function(data){ %>
        <div class="mx-2 my-2" style="min-width: 150px;text-align: center;">
            <div class="thumbnail">
                <a href="/explore/<%= data.media_type %>/<%= data.id %>">
                    <img class ="card-img-top" style="height:220px"
                    src="https://image.tmdb.org/t/p/w500/<%=data['poster_path'] %>" alt="<%=data.original_title%>">
                </a>
                <div class="caption text-center">
                    <a class="nav-link" href="/explore/<%= data.media_type %>/<%= data.id %>">
                        <h6 class="card-title">
                            <%if(data.media_type === "tv"){%>
                                <%=data.original_name%>
                            <%}else{%>
                                <%=data.original_title%>
                                <%}%>
                        </h6><span>
                    </a>
                </div>    
            </div>   
        </div>
        <% }) %>
    </div>
<%}%>

